{
  "name": "@rishitank/holocron",
  "version": "0.1.2",
  "description": "Local codebase intelligence for Claude Code. Your personal holocron.",
  "type": "module",
  "engines": {
    "node": ">=25.0.0"
  },
  "bin": {
    "holocron": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    ".claude-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rishitank/holocron.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=junit --outputFile=test-results.xml",
    "test:coverage": "vitest run --coverage",
    "benchmark": "tsx tests/benchmark/runner.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.3",
    "fastify": "^5.0.0",
    "simple-git": "^3.0.0",
    "sqlite-vec": "^0.1.0",
    "zod": "^3.25.0"
  },
  "optionalDependencies": {
    "@huggingface/transformers": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "memfs": "^4.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.0.0"
  }
}
